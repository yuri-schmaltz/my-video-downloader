{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "preference": {
        "args": [
          {
            "binary": "python-sidecar",
            "cmd": "python3",
            "args": [
              "src_python/sidecar.py"
            ]
          }
        ]
      }
    }
  ]
}